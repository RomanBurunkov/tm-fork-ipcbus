{
  "name": "tm-fork-ipcbus",
  "version": "0.0.1",
  "description": "Node fork inter process communication bus",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ignore-path .gitignore index.js",
    "lint:tests": "eslint --fix --ignore-path .gitignore test/**",
    "lint:fix": "eslint --fix --ignore-path .gitignore index.js",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RomanBurunkov/tm-fork-ipcbus.git"
  },
  "keywords": [
    "ipc"
  ],
  "author": "Roman Burunkov <romon2002@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RomanBurunkov/tm-fork-ipcbus/issues"
  },
  "homepage": "https://github.com/RomanBurunkov/tm-fork-ipcbus#readme",
  "dependencies": {
    "tm-is": "^0.2.0",
    "tm-result": "^0.0.1"
  },
  "devDependencies": {
    "eslint": "^8.7.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "jest": "^27.4.7"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "jest": true
    },
    "parserOptions": {
